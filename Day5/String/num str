#include <iostream>/*header*/
using namespace std;
int main()
{                                    /*main function*/
    string name, fname, lname;       /*initialization*/
    cout << "enter your first name"; /*msg to take input*/
    cin >> fname;                    /* first name as input*/
    cout << "enter your last name";
    cin >> lname; /*second name as input*/
    cout << " your full name is";
    name = fname + " " + lname;
    cout << name; /*showing full name after concatenation*/
    cout << "\n"
         << name.size(); /*showing size for the string which is entered by user*/
    return 0;
}
