
#include <iostream>
using namespace std;

// template function
template <class T>
T Large(T n1, T n2)
{
    return (n1 > n2) ? n1 : n2;
}

int main()
{
    int i1, i2;
    float f1, f2;

    cout << "Enter two integers:\n"; /* call for int*/
    cin >> i1 >> i2;
    cout << Large(i1, i2) << " is larger." << endl;

    cout << "\nEnter two floating-point numbers:\n"; /* call for float*/
    cin >> f1 >> f2;
    cout << Large(f1, f2) << " is larger." << endl;

    return 0;
}
